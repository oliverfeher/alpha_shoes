<%= stylesheet_link_tag 'application' %>
<%= content_tag(:section, "", id: "main") do %>
      <%= image_tag("logos/triangles", id: "triangle1")%>
      <%= content_tag(:div, "", id: "main-title") do %>
        <%= content_tag(:p, "ALPHA", class: "title-21")%>
        <%= content_tag(:p, "SHOES", class: "title-1")%>
      <% end %>
      <%= image_tag("logos/triangles", id: "triangle2")%>
<% end %>

<%= form_with(model: @user, url: users_path, method: "POST") do |f| %>

    <%= f.label :email, "User E-mail" %><br>
    <%= f.email_field :email, placeholder: "Enter your e-mail" %><br>

    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password, placeholder: "Enter your password" %><br>

    <%= f.submit "SIGN UP", id: "button"%>

  <% if flash[:user_errors] %>
      <% flash[:user_errors].uniq.each do |msg| %>
       <%= content_tag(:p, "#{msg}", id: "error-msg") %>
      <% end %>
  <% end %>

<% end %>


