<% if flash[:user_errors] %>
    <% flash[:user_errors].uniq.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
<% end %>

<%= form_with(model: @user, url: users_path, method: "POST") do |f| %>

    <%= f.label :email, "User E-mail" %>
    <%= f.email_field :email, placeholder: "Enter your e-mail" %>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password, placeholder: "Enter your password" %>

    <%= f.submit "Sign up"%>

<% end %>

