
<%= content_tag(:nav) do %>
    <%= content_tag(:ul, id: "nav-bar") do %>

<!-- HAMBUGER OVERLAY FOR MOBILE SCREEN !-->
        <%= content_tag(:li) do %>
            <%= image_tag("logos/hamburger.svg", id: "overlay-hamburger")%>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to "HOME", "/", class: "nav-link" %>
        <% end %>

        <%= content_tag(:li) do %>
          <%= link_to "PRODUCTS", "/shoes", class: "nav-link" %>
        <% end %>

<!-- ORDERS NAV LINK IF USER SESSION TRUE !-->
        <% if current_user %>
          <%= content_tag(:li) do %>
            <%= link_to "ORDERS", "/users/#{current_user.id}/orders", class: "nav-link" %>
          <% end %>
        <% end %>

<!-- IF USER IS LOGGED IN/OUT CHANGES !-->
        <%= content_tag(:li) do %>
          <% if current_user%>
            <%= link_to "LOGOUT", "/users/logout", class: "nav-link" %>
          <% else %>
            <%= link_to "LOGIN", "/users/login", class: "nav-link" %>
          <% end %>
        <% end %>

        <% if logged_in? %>
          <%= content_tag(:li, id: "logo-container") do %>
            <%= content_tag(:div, "", id: "cart-container") do %>
              <%= image_tag("logos/shopping-cart.svg", id: "shoppingcart")%>
              <%= content_tag(:p, cart_items, id: "cart-items") %>
            <% end %>

            <%= content_tag(:div, "") do %>
              <%= image_tag("logos/user.svg", id: "user-logo")%>
              <% if current_user.detail %>
                <%= content_tag(:p, current_user.detail.full_name, id: "user-name") %>
              <% end %>

            <% end %>
          <% end %>
          
        <% else %>
        
<!-- DEFAULT LOGO !-->
        <%= content_tag(:li, id: "logo-container") do %>
            <%= content_tag(:div, "") do %>
                <%= content_tag(:p, "ALPHA", id: "logo-title")%>
                <%= content_tag(:p, "SHOES", id: "logo-desc")%>
            <% end %>

        <% end %>
        <% end %>
    <% end %>
<% end %>