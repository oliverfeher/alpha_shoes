<%= stylesheet_link_tag 'application' %>
<%= content_tag(:section, "", id: "main") do %>
      <%= image_tag("logos/triangles.svg", id: "triangle1")%>
      <%= content_tag(:div, "", id: "main-title") do %>
        <%= content_tag(:p, "ALPHA", class: "title-21")%>
        <%= content_tag(:p, "SHOES", class: "title-1")%>
      <% end %>
      <%= image_tag("logos/triangles.svg", id: "triangle2")%>
<% end %>

<%= form_with(url: "/sessions", method: "POST") do |f| %>

    <%= f.label :email, "User E-mail" %>
    <%= f.email_field :email, placeholder: "Enter your e-mail" %>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password, placeholder: "Enter your password" %>

    <%= f.submit "LOG IN", id: "button"%>

    <% flash.each do |name, msg| %>
        <%= content_tag(:p, "#{msg}", id: "error-msg") %>
    <% end %>

    <% if !logged_in? %>
        <%= link_to "REGISTER", new_user_path, id: "cta"%>
    <% end %>

<% end %>

