<%= content_tag(:section, id: "detail-container", style: "overflow-y:scroll") do %>
        <%= image_tag(@shoe.pic_url, class: "detail-1")%>
        <%= content_tag(:p, @shoe.brand.upcase, class: "detail-2") %>
        <%= content_tag(:p, @shoe.model.upcase, class: "detail-3") %>
        <%= content_tag(:p, "RATING: #{@avg.round(1)}", class: "review-rat") %>
        <%= content_tag(:div,"", class: "line2")%>
        <% if !@shoe.reviews.empty? %>
            <% @shoe.reviews.each do |x| %>
                <%= content_tag(:p, "Review by: #{x.user.detail.full_name}", class: "review-auth")%>
                <%= content_tag(:p, "#{x.rating} STARS", class: "review-rat")%>
                <%= content_tag(:p, x.content, class: "review-desc")%>
                <%= content_tag(:div,"", class: "line")%>
            <% end %>
        <% end %>
<% end %>