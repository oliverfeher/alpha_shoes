<%= content_tag(:section, "", id: "main") do %>
      <%= image_tag("logos/triangles", id: "triangle1")%>
      <%= content_tag(:div, "", id: "main-title") do %>
        <%= content_tag(:p, "LEAVE", class: "title-21")%>
        <%= content_tag(:p, "REVIEW", class: "title-1")%>
      <% end %>
      <%= image_tag("logos/triangles", id: "triangle2")%>
<% end %>



<%= form_with(model: @review, url: "/shoes/#{@shoe.id}/reviews", method: "POST", id: "review_form") do |f| %>
  <%= f.label :rating, "Rating"%>
  <%= f.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
  <%= f.label :content, "Share your feedback"%>
  <%= f.text_area :content %>
  <%= f.hidden_field  "user_id", value: current_user.id %>
  <%= f.submit value: "Leave review!", id: "button"%>
<% end %>