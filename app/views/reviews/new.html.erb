<section id="main">
      <%= image_tag("logos/triangles", id: "triangle1")%>
      <div id="main-title">
        <p class="title-21">LEAVE</p>
        <p class="title-1">REVIEW</p>
      </div>
      <%= image_tag("logos/triangles", id: "triangle2")%>
    </section>

<%= form_for(@shoe) do |f| %>

    <%= f.fields_for :review, Review.new do |shoe_attributes| %>
        <%= shoe_attributes.label :rating, "Rating"%>
        <%= shoe_attributes.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
        <%= shoe_attributes.label :content, "Share your feedback"%>
        <%= shoe_attributes.text_area :content %>
    <% end %>

    <%= f.submit value: "Leave review!", id: "button"%>
<% end %>