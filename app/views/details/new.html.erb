<%= content_tag(:section, "", id: "main") do %>
      <%= image_tag("logos/triangles.svg", id: "triangle1")%>
      <%= content_tag(:div, "", id: "main-title") do %>
        <%= content_tag(:p, "USER", class: "title-21")%>
        <%= content_tag(:p, "DETAILS", class: "title-1")%>
      <% end %>
      <%= image_tag("logos/triangles.svg", id: "triangle2")%>
<% end %>

<%= form_with(url: "/users/details", method: "POST") do |f| %>

    <%= f.label :full_name, "Full name" %>
    <%= f.text_field :full_name, placeholder: "Enter your full name" %>

    <%= f.label :address, "Address" %>
    <%= f.text_field :address, placeholder: "Enter your address" %>

    <%= f.label :city, "City" %>
    <%= f.text_field :city, placeholder: "Enter your city" %>

    <%= f.label :state, "State" %>
    <%= f.text_field :state, placeholder: "Enter your state" %>

    <%= f.submit "CONFIRM", id: "button"%>

    <% flash.each do |name, msg| %>
        <%= content_tag(:p, "#{msg}", id: "error-msg") %>
    <% end %>
<% end %>